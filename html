    <script>
        // Function to open windows
        function openWindow(windowId) {
            // Close all windows first
            document.querySelectorAll('.window').forEach(window => {
                window.style.display = 'none';
            });
            
            // Open the requested window
            const window = document.getElementById(windowId);
            if (window) {
                window.style.display = 'flex';
                // Position the window in the center
                window.style.top = '50%';
                window.style.left = '50%';
                window.style.transform = 'translate(-50%, -50%)';
            }
            
            // Update active dock item
            document.querySelectorAll('.dock-item').forEach(item => {
                item.classList.remove('active');
            });
            event.currentTarget.classList.add('active');
        }
        
        // Function to close windows
        function closeWindow(windowId) {
            const window = document.getElementById(windowId);
            if (window) {
                window.style.display = 'none';
            }
        }
        
        // Function to minimize windows (simplified)
        function minimizeWindow(windowId) {
            const window = document.getElementById(windowId);
            if (window) {
                window.style.display = 'none';
            }
        }
        
        // Make windows draggable
        let isDragging = false;
        let currentWindow = null;
        let offsetX, offsetY;
        
        document.querySelectorAll('.window-header').forEach(header => {
            header.addEventListener('mousedown', function(e) {
                isDragging = true;
                currentWindow = this.parentElement;
                offsetX = e.clientX - currentWindow.getBoundingClientRect().left;
                offsetY = e.clientY - currentWindow.getBoundingClientRect().top;
                currentWindow.style.cursor = 'grabbing';
            });
        });
        
        document.addEventListener('mousemove', function(e) {
            if (isDragging && currentWindow) {
                currentWindow.style.left = (e.clientX - offsetX) + 'px';
                currentWindow.style.top = (e.clientY - offsetY) + 'px';
                currentWindow.style.transform = 'none';
            }
        });
        
        document.addEventListener('mouseup', function() {
            isDragging = false;
            if (currentWindow) {
                currentWindow.style.cursor = 'default';
                currentWindow = null;
            }
        });
        
        // Open GitHub window by default
        window.onload = function() {
            openWindow('github-window');
        };
    </script>
